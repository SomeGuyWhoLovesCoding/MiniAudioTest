<xml>
	<pragma once="true" />

	<cppflag value="HASHLINK" if="HASHLINK windows" />

	<set name="PROJECT_DIR" value="${this_dir}/Source" />
	<set name="HASHLINK" value="F:/jerem/Downloads+/hl-1.12" if="HASHLINK windows" />
	<set name="HL_INCLUDE" value="${HASHLINK}/include" if="HASHLINK windows" />
	<set name="HL_BIN" value="${HASHLINK}" if="HASHLINK windows" />

	<echo value="hashlink: ${HASHLINK}" />
    <echo value="hashlink include: ${HL_INCLUDE}" />
    <echo value="hashlink bin: ${HL_BIN}" />

	<files id="miniaudio">
		<compilerflag value="-I${PROJECT_DIR}/miniaudio" />
		<compilerflag value="-I${PROJECT_DIR}/miniaudio/include" />
		<compilerflag value="-I${PROJECT_DIR}/miniaudio/signalsmith-stretch" />
		<file name="${PROJECT_DIR}/miniaudio/ma_thing.cpp" />
		<compilerflag value="-I${HASHLINK}/include" />
	</files>

	<target id="default" output="ma_thing" toolid="dll" tool="linker" >
		<files id="miniaudio" />
		<section if="HASHLINK windows">
			<libpath name="${HASHLINK}" if="HASHLINK windows" />
			<libpath name="/usr/local/lib" if='HASHLINK macos' />
			<lib name="libhl.lib" if="windows" />
			<lib name="-lhl" unless="windows" />
			<ext value=".hdll" />
			<outdir name="Export/hl/bin" />
		</section>
	</target>

	<target id="haxe">
		<files id="miniaudio" />
	</target>
</xml>